<hibernate-mapping package="li.rajenlab.canto.core.domain.job">

  <class name="Job" table="JOB">
  
	<!-- Entity mapping -->
    <id name="id" column="ID" type="long">
      <generator class="native"/>
    </id>
    <property name="creationTime" type="timestamp">
      <column name="CREATION_TIME"/>
    </property>
    <property name="changeTime" type="timestamp">
      <column name="CHANGE_TIME"/>
    </property>
    
    <!-- Property mapping -->
    <property name="code">
        <column name="JOB_UID" not-null="true" unique="true"/>
    </property>
    <property name="name" length="150">
       <column name="NAME" not-null="true"/>
    </property>
    <property name="description" length="2000">
       <column name="DESCRIPTION"/>
    </property>
    
    <!-- Association mapping -->
    <many-to-one name="jobLevel" column="LEVEL_ID" not-null="true"/>
    <many-to-one name="salaryRange" column="SALARYRANGE_ID"/>

  </class>
    
</hibernate-mapping>   
