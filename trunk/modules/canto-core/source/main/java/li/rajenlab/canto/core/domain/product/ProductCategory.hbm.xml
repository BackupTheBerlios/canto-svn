<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="li.rajenlab.canto.core.domain.product">

  <class name="ProductCategory" table="PRODUCT_CATEGORY">
  	


 	<id name="id" column="ID" type="long">
      <generator class="native"/>
    </id>
    <version column="VERSION" name="version"/>
    <property name="creationTime" type="timestamp">
      <column name="CREATION_TIME"/>
    </property>
    <property name="changeTime" type="timestamp">
      <column name="CHANGE_TIME"/>
    </property>
  
    <!-- Property mapping -->
	<property name="ouid">
    	<column name="PR_CATEGORY_UID" unique="true" not-null="true"/>
    </property>
    <property name="name" length="100">
    	<column name="NAME" not-null="true"/>
    </property>
    
    <many-to-one name="parent" column="PARENT"/>
    
    
  </class>
    
</hibernate-mapping>  