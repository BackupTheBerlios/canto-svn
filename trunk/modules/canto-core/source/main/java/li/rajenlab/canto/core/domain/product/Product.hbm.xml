<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="li.rajenlab.canto.core.domain.product">

  <class name="Product" table="PRODUCT">
  	
 	<id name="id" column="ID" type="long">
      <generator class="native"/>
    </id>
    <version column="VERSION" name="version"/>
    <property name="creationTime" type="timestamp">
      <column name="CREATION_TIME"/>
    </property>
    <property name="changeTime" type="timestamp">
      <column name="CHANGE_TIME"/>
    </property>
  
    <!-- Property mapping -->
	  <property name="name" not-null="true" length="150">
      <column name="NAME"/>
    </property>
    <property name="ouid" unique="true" not-null="true">
      <column name="PRODUCT_UID"/>
    </property>
     <property name="status">
       <column name="STATUS" not-null="true"/>
       <type name="li.rajenlab.common.hibernate.type.StringValuedEnumType">
         <param name="enumClass">li.rajenlab.canto.core.domain.product.ProductStatus</param>
       </type>
    </property>
    
    <!-- Association mapping -->
    <many-to-one name="type" column="PRODUCT_TYPE_ID" not-null="true"/>
    <list name="attributes" lazy="true" table="PRODUCT_ATTRIBUTES">
       <key column="PRODUCT_ID"/>
       <index column="POS"/>
       <many-to-many column="ATTRIBUTE_ID" class="li.rajenlab.common.domain.attribute.Attribute"/>
    </list>
     <set name="categories" lazy="true" table="PRODUCT_CATEGORIES">
    	<key column="PRODUCT_ID"/>
    	<many-to-many column="CATEGORY_ID" class="li.rajenlab.canto.core.domain.product.ProductCategory"/>
    </set>
    <set name="parts" lazy="true" table="PRODUCT_PARTS">
       <key column="PRODUCT_ID"/>
       <many-to-many column="PART_ID" class="li.rajenlab.canto.core.domain.product.Product"/>
    </set>
    
  </class>
    
</hibernate-mapping>  