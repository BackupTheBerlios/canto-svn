<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="li.rajenlab.canto.core.domain.product">

  <class name="ProductAvailability" table="PRODUCT_AVAILABILITY">
  	
 	<id name="id" column="ID" type="long">
      <generator class="native"/>
    </id>
    <version column="VERSION" name="version"/>
    <property name="creationTime" type="timestamp">
      <column name="CREATION_TIME"/>
    </property>
    <property name="changeTime" type="timestamp">
      <column name="CHANGE_TIME"/>
    </property>
  
    <!-- Property mapping -->
	  <property name="expiryDate" type="timestamp">
      <column name="EXPIRY_DATE"/>
    </property>
    <property name="introductionDate" type="timestamp">
      <column name="INTRODUCTION_DATE"/>
    </property>
  
    
    <many-to-one name="product" column="PRODUCT_ID" not-null="true"/>
    <many-to-one name="market" column="MARKET_ID" not-null="true"/>
    <many-to-one name="salesChannel" column="SALES_CHANNEL_ID" not-null="true"/>
    
    
  </class>
    
</hibernate-mapping>  