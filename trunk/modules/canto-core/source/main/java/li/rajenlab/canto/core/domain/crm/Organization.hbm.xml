<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="li.rajenlab.canto.core.domain.crm">

  <class name="Organization" table="ORGANIZATION">
  	
 	<id name="id" column="ID" type="long">
      <generator class="native"/>
    </id>
    <version column="VERSION" name="version"/>
    <property name="creationTime" type="timestamp">
      <column name="CREATION_TIME"/>
    </property>
    <property name="changeTime" type="timestamp">
      <column name="CHANGE_TIME"/>
    </property>
  
    <!-- Association mapping -->
    <many-to-one name="legalContact"   column="LEGAL_CONTACT_ID" not-null="true"/>
    <many-to-one name="billingContact" column="BILLING_CONTACT_ID" not-null="true"/>
    
  </class>
    
</hibernate-mapping>  