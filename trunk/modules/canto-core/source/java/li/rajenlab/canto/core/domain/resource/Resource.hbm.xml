<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="li.rajenlab.canto.core.domain.resource">

  <class name="Resource" table="CANTO_RESOURCE">
  
	<!-- Entity mapping -->
    <id name="id" column="ID" type="long">
      <generator class="native"/>
    </id>
    <version column="VERSION" name="version"/>
    <property name="creationTime" type="timestamp">
      <column name="CREATION_TIME"/>
    </property>
    <property name="changeTime" type="timestamp">
      <column name="CHANGE_TIME"/>
    </property>
    
    <!-- Property mapping -->
    <property name="code">
    	<column name="RESOURCE_CODE" unique="true" not-null="true"/>
    </property>
    <property name="name"  type="string" length="100">
        <column name="NAME"/>
    </property>
    <property name="description" type="string" length="2000">
        <column name="DESCRIPTION"/>
    </property>

    <property name="resourceType">
       <column name="RESOURCE_TYPE" not-null="true"/>
       <type name="li.rajenlab.common.hibernate.type.StringValuedEnumType">
         <param name="enumClass">li.rajenlab.canto.core.domain.resource.ResourceType</param>
       	 <param name="defaultValue">UNDEFINED</param>
       </type>
    </property>
    
	<map name="settings" table="CANTO_RESOURCE_SETTINGS">
    	<key column="RESOURCE_CODE"/>
	    <map-key column="SETTINGS_NAME" type="string"/>
    	<element column="SETTINGS_VALUE" type="string" length="2000"/>
	</map>    	


  </class>
    
</hibernate-mapping>   
