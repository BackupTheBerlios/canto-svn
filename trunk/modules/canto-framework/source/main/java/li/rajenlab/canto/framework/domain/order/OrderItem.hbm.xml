<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="li.rajenlab.framework.domain.order">

  <class name="OrderItem" table="CANTO_ORDER_ITEM">
  
	<!-- Entity mapping -->
    <id name="id" column="ID" type="long">
      <generator class="native"/>
    </id>
    <property name="creationTime" type="timestamp">
      <column name="CREATION_TIME"/>
    </property>
    <property name="changeTime" type="timestamp">
      <column name="CHANGE_TIME"/>
    </property>
     
	<!-- OrderNote mapping -->
	<property name="quantity">
      <column name="QUANTITY"/>
    </property>

    
    <!-- Associations  -->
    <many-to-one name="product" column="PRODUCT_ID"/>    
     <many-to-one name="order" column="ORDER_ID"/>
  </class>
  
</hibernate-mapping>