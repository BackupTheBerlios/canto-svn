<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="li.rajenlab.canto.common.domain.channel">

  <class name="Channel" table="CANTO_CHANNEL">
  
	<!-- Entity mapping -->
    <id name="id" column="ID" type="long">
      <generator class="native"/>
    </id>
    <property name="creationTime" type="timestamp">
      <column name="CREATION_TIME"/>
    </property>
    <property name="changeTime" type="timestamp">
      <column name="CHANGE_TIME"/>
    </property>
    
    <!-- Property mapping -->
    <property name="channelId">
    	<column name="CHANNEL_UID" unique="true" not-null="true"/>
    </property>
       <property name="channelStatus">
       <column name="CHANNEL_STATUS"/>
       <type name="li.rajenlab.common.hibernate.type.StringValuedEnumType">
         <param name="enumClass">li.rajenlab.canto.framework.domain.channel.ChannelStatus</param>
       </type>
    </property>
         <property name="channelMedia">
       <column name="CHANNEL_MEDIA"/>
       <type name="li.rajenlab.common.hibernate.type.StringValuedEnumType">
         <param name="enumClass">li.rajenlab.canto.framework.domain.channel.ChannelMedia</param>
       </type>
    </property>
    
    <many-to-one name="legalContact" column="LEGAL_CONTACT_ID"/> 
	<many-to-one name="billingContact" column="BILLING_CONTACT_ID"/> 
	<many-to-one name="mailingContact" column="MAILING_CONTACT_ID"/> 
	<many-to-one name="type" column="ACCOUNT_TYPE"/>
  
  </class>
    
</hibernate-mapping>   
