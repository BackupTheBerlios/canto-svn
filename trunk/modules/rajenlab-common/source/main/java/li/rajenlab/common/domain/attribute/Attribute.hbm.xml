<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="li.rajenlab.common.domain.attribute">

  <class name="Attribute" table="ATTRIBUTE">
  
	<!-- Entity mapping -->
    <id name="id" column="ID" type="long">
      <generator class="native"/>
    </id>
    <property name="creationTime" type="timestamp">
      <column name="CREATION_TIME"/>
    </property>
    <property name="changeTime" type="timestamp">
      <column name="CHANGE_TIME"/>
    </property>
    <property name="localeKey">
  	  <column name="LOCALE_KEY"/>  
    </property>
    
    <!-- Property mapping -->
    <property name="name">
    	<column name="NAME" unique="true" not-null="true"/>
    </property>
 
	<property name="valueType">
       <column name="VALUE_TYPE" not-null="true"/>
       <type name="li.rajenlab.common.hibernate.type.StringValuedEnumType">
         <param name="enumClass">li.rajenlab.common.domain.attribute.AttributeValueType</param>
       </type>
    </property>
    

  </class>
    
</hibernate-mapping>   
